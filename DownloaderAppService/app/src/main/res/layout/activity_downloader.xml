<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hasancsedu5gmail.downloaderappservice.DownloaderActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Downloader"
        android:textSize="30sp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/text_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="https://www.downloadURL.com/"
            android:layout_weight="6"/>
        <Button
            android:id="@+id/button_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get"
            android:onClick="onGetClick"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delay : "
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/text_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000"
            android:layout_weight="5"/>
        <CheckBox
            android:id="@+id/check_box_fake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fake"
            android:checked="true"
            android:layout_weight="2"/>

    </LinearLayout>
    <ListView
        android:id="@+id/list_link"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
