<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <fragment
            android:id="@+id/fragment_cast_list_id"
            android:name="com.hasancsedu5gmail.gameofthronesbio.CastListFragment"
            tools:layout = "@layout/fragment_cast_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </fragment>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <fragment
            android:id="@+id/fragment_cast_detaisl_layout"
            android:name="com.hasancsedu5gmail.gameofthronesbio.CastDetailsFragment"
            tools:layout ="@layout/fragment_cast_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </fragment>


    </LinearLayout>





</LinearLayout>