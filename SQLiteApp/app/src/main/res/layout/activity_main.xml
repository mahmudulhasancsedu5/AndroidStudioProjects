<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hasancsedu5gmail.sqliteapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Table"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:textSize="30sp"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/text_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="section"
        android:textSize="30sp"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/text_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="roll"
        android:textSize="30sp"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickInsertStudent"
        android:text="Insert"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/button_show_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClickShowAllStudent"
        android:text="Show All Students"
        android:textSize="30sp"
        android:layout_margin="10dp"/>

</LinearLayout>
